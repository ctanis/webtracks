.track
  position relative
  overflow hidden
  height $track-height
  margin-right $track-controls-width - 2
  background-color #eee
  clearfix()
  label
    font-size 0.8em

.track-controls
  position absolute
  top 0
  left 0
  bottom 0
  z-index 12
  margin 0
  padding 0.6em 0.8em
  width $track-controls-width
  border 1px solid darken($dark-gray, 20%)
  border-top-color lighten($dark-gray, 10%)
  border-left-color lighten($dark-gray, 10%)
  box-shadow 0 0 4px darken($dark-gray, 20%)
  background-color #333
  color $light-gray

.track-effects
  position absolute
  top 8px
  left 0
  bottom 8px
  z-index 1
  margin 0
  padding 0.6em 1.2em 0.6em 1.6em
  width $track-controls-width - 4
  border none
  border-radius 3px
  box-shadow 1px 0 4px darken($light-gray, 20%)
  background-color #333
  color $light-gray
  transition left 0.2s ease
  &.open
    left $track-controls-width - 1

.track-waveform
  position relative
  height $track-height
  margin-left $track-controls-width

.track-remove
  position absolute
  top 0
  right 0

.position-indicator
  position fixed
  top 0
  height 0
  overflow visible
  left $track-controls-width
  right $track-controls-width - 2
  z-index 100

.needle
  position absolute
  top 0
  left 0%
  height 100000px
  width 1px
  background-color #222
